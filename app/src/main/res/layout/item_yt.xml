<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/bg_fav">


    <ImageView
        android:id="@+id/img_anhbiayt"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tenyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="#55000000"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:text="DEMON SLAYER"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/img_anhbiayt"
        app:layout_constraintTop_toTopOf="@id/img_anhbiayt" />

    <TextView
        android:id="@+id/tv_tgyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="#55000000"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:text="Gotouge Koyoharu"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/img_anhbiayt"
        app:layout_constraintTop_toBottomOf="@id/tv_tenyt" />

    <TextView
        android:id="@+id/tv_nxbyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="#55000000"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:text="2016"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/img_anhbiayt"
        app:layout_constraintTop_toBottomOf="@id/tv_tgyt" />

</androidx.constraintlayout.widget.ConstraintLayout>